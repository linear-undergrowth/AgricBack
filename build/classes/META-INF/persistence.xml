<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    
	<persistence-unit name="AgricBack"
		transaction-type="RESOURCE_LOCAL"> 
		<provider>
			org.eclipse.persistence.jpa.PersistenceProvider
		</provider>
		<class>com.undergrowth.bean.Eartag</class>
		<class>com.undergrowth.bean.EartagId</class>
		<class>com.undergrowth.bean.Salecode</class>
		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="oracle.jdbc.driver.OracleDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:oracle:thin:@localhost:1521:ganew" />
			<property name="javax.persistence.jdbc.user" value="under" />
			<property name="javax.persistence.jdbc.password"
				value="under" />
		</properties>
	</persistence-unit>

</persistence>
